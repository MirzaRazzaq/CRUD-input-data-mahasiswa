<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/putih"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/udinus"
                android:layout_height="100dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="UNIVERSITAS DIAN NUSWANTORO"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/biru"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Data Mahasiswa"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Input NIM        :"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Input Nama     :"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Input Fakultas :"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Input Jurusan  :"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Input Tgl Lahir :"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/xnim"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/xnama"
                android:layout_width="250dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/xfakultas"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/xjurusan"
                android:layout_width="250dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/xlahir"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tblTambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan" />

        <Button
            android:id="@+id/tblTampil"
            android:layout_width="wrap_content"
            android:text="Tampil"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/tblEdit"
            android:layout_width="wrap_content"
            android:text="Edit"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/tblHapus"
            android:layout_width="wrap_content"
            android:text="Hapus"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>